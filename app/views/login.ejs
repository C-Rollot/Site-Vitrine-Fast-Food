<!-- Include the header -->
<%- include('./partials/header') %>

    <!-- Include the event banner -->
    <%- include('./partials/wkd') %>

    <!-- Alert message for standard users-->
    <div class="flex gap-1 w-11/12 mt-4 mx-auto lg:w-2/5 lg:mt-8">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.249-8.25-3.286zm0 13.036h.008v.008H12v-.008z" />
      </svg>
      
      <p class="text-red-500 font-semibold">Cette section est réservée aux administrateurs. En tant que client(e), veuillez vous 
      rendre <a href="/" class="underline">ici</a>.</p>
    </div>

    <h2 class="text-3xl mt-8 mx-10 font-semibold text-gray-900 lg:text-4xl lg:mt-14 lg:text-center">Connexion</h2>

    <!-- Login form -->
    <form method="post" class="w-4/5 mx-10 mt-5 lg:w-2/5 lg:mx-auto lg:mt-20">
        <div class="md:flex md:items-center mb-6">
          <div class="w-full">
            <label class="block text-gray-900 text-lg font-bold mb-2" for="username">
              Nom d'utilisateur
            </label>
            <input class="appearance-none bg-gray-200 border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-blue-500" name="username" type="text" placeholder="Pseudo, adresse mail...">
          </div>
        </div>
        <div class="md:flex md:items-center mb-6">
          <div class="w-full">
            <label class="block text-gray-900 text-lg font-bold mb-2" for="password">
              Mot de passe
            </label>
            <input class="appearance-none bg-gray-200 border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-blue-500" name="password" type="password" placeholder="Mot de passe...">
          </div>
        </div>

        <% if(locals.error) { %>
          <p class="text-red-500 font-semibold mb-2"><%= error %></p>
        <% } %>

        <div class="md:flex md:items-center">
          <div class="w-full">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 ease-in-out duration-200 text-white font-bold py-2 px-4 rounded-full">Se Connecter</button>
          </div>
        </div>
      </form>

